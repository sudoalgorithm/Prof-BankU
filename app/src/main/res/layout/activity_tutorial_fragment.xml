<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <LinearLayout
        android:id="@+id/activity_tutorial_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="profbanku.profbanku.Fragments.TutorialFragment"
        android:layout_gravity="center"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_shape_two"
            android:fontFamily="sans-serif-"
            android:padding="20dp"
            android:text="Quantitative Aptitude"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:id="@+id/quantitativeAptitude"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_shape_two"
            android:fontFamily="sans-serif-light"
            android:padding="20dp"
            android:text="Reasoning"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:id="@+id/reasoning"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_shape_two"
            android:fontFamily="sans-serif-light"
            android:padding="20dp"
            android:text="Verbal"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:id="@+id/verbal"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_shape_two"
            android:fontFamily="sans-serif-light"
            android:padding="20dp"
            android:text="General Knowledge"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:id="@+id/generalKnowledge"
            />

    </LinearLayout>
</ScrollView>
